<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hms_doctor_tree" model="ir.ui.view">
            <field name="name">hms.doctor.tree</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <tree string="Doctors" >
                    <field name="name" />
                    <field name="phone" />
                    <field name="speciality" />
                </tree>
            </field>
        </record>

        <record id="hms_doctor_action" model="ir.actions.act_window">
            <field name="name">Doctor</field>
            <field name="res_model">hms.doctor</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="hms_doctor_tree" ></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Add a new doctor</p>
            </field>
        </record>

    </data>
</odoo>